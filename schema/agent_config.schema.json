{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ROTD Agent Configuration",
  "description": "Schema for agent configuration (v1.3.0)",
  "type": "object",
  "required": ["agent_id", "agent_type"],
  "properties": {
    "agent_id": {
      "type": "string",
      "description": "Unique agent identifier (UUID)"
    },
    "agent_type": {
      "type": "string",
      "enum": ["opus", "sonnet", "haiku", "gpt-4o", "other"],
      "description": "Type of AI agent"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["frontend_ts", "backend_rust", "tests_only", "docs", "refactor"]
      },
      "description": "Agent's declared capabilities",
      "minItems": 1
    },
    "skill_level": {
      "type": "string",
      "enum": ["entry", "intermediate", "expert"],
      "description": "Agent's skill level",
      "default": "intermediate"
    },
    "heartbeat_interval": {
      "type": "integer",
      "minimum": 10,
      "maximum": 300,
      "default": 60,
      "description": "Heartbeat interval in seconds"
    },
    "lock_timeout": {
      "type": "integer",
      "minimum": 5,
      "maximum": 300,
      "default": 30,
      "description": "Lock acquisition timeout in seconds"
    },
    "stale_threshold": {
      "type": "integer",
      "minimum": 300,
      "maximum": 3600,
      "default": 900,
      "description": "Time in seconds before considering a lock/heartbeat stale"
    }
  }
}