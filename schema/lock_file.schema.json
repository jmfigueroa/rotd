{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ROTD Lock File",
  "description": "Schema for lock file metadata (v1.3.0)",
  "type": "object",
  "required": ["holder", "since"],
  "properties": {
    "holder": {
      "type": "string",
      "description": "Agent UUID holding the lock"
    },
    "since": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when lock was acquired"
    },
    "task_id": {
      "type": "string",
      "pattern": "^(\\d+\\.\\d+|cross-\\d+)$",
      "description": "Task ID for task-level locks"
    },
    "path": {
      "type": "string",
      "description": "File path for file-level locks"
    },
    "purpose": {
      "type": "string",
      "description": "Purpose or operation being performed"
    }
  }
}