{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ROTD Coordination Log Entry",
  "description": "Schema for structured coordination log entries (v1.3.0)",
  "type": "object",
  "required": ["timestamp", "agent_id", "event_type", "message"],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the event"
    },
    "agent_id": {
      "type": "string",
      "description": "UUID of the agent that generated this event"
    },
    "event_type": {
      "type": "string",
      "enum": [
        "task_claimed",
        "task_released",
        "task_completed",
        "task_blocked",
        "task_unblocked",
        "task_review",
        "task_approved",
        "progress_update",
        "lock_acquired",
        "lock_released",
        "lock_timeout",
        "lock_stale",
        "heartbeat",
        "message",
        "error",
        "warning"
      ],
      "description": "Type of coordination event"
    },
    "message": {
      "type": "string",
      "description": "Human-readable event message"
    },
    "task_id": {
      "type": ["string", "null"],
      "pattern": "^(\\d+\\.\\d+|cross-\\d+)$",
      "description": "Related task ID if applicable"
    },
    "metadata": {
      "type": "object",
      "description": "Additional event-specific metadata",
      "properties": {
        "progress_percent": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Progress percentage for progress_update events"
        },
        "pss_score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "PSS score for completed tasks"
        },
        "lock_path": {
          "type": "string",
          "description": "Path to locked file or artifact"
        },
        "error_code": {
          "type": "string",
          "description": "Error code for error events"
        },
        "blocked_reason": {
          "type": "string",
          "description": "Reason for task blocking"
        }
      }
    }
  }
}